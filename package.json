{
    "name": "Mark",
    "version": "1.0.1",
    "description": "Editor Markdown",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "build": "electron-builder"
    },
    "keywords": [],
    "author": "Giovanni",
    "license": "ISC",
    "devDependencies": {
        "electron": "^28.0.0",
        "electron-builder": "^24.13.3"
    },
    "dependencies": {
        "@electron/remote": "^2.1.2"
    },
    "build": {
        "appId": "com.Giovanni.Mark",
        "productName": "Mark",
        "fileAssociations": [
            {
            "ext": "md",
            "name": "Markdown File",
            "description": "File Markdown",
            "role": "Editor",
            "icon": "build/mark.png"
            }
        ],
        "win": {
            "icon": "build/logo.ico"
        },
        "mac": {
            "icon": "build/logo.icns"
        },
        "linux": {
	        "target": "AppImage"
	    }
    }
}
